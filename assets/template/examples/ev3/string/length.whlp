#project "String charCode example"

#include "lib/modules/standard.whl"
#include "lib/modules/device.whl"
#include "lib/modules/screen.whl"
#include "lib/modules/string.whl"

#display "EV3"

string fruit[5] = ["Banana", "Apple", "Orange", "Pear", "Melon"]

proc main()
    ; Select the EV3 device in the simulator...
    selectDevice(DEVICE_EV3)

    number n
    for n = 0 to 4
        number y = 10 + 20 * n
        drawText(10, y, fruit[n])
        drawNumber(120, y, length(fruit[n]))
    end

    updateScreen()
    halt()
end

