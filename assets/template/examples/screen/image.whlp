#resource "resources/images/system/accept1.rgf"

proc main()
    setFill(TRUE)
    setFillColor(BLACK)
    drawRect(0, 0, SCREEN_CENTER_X, SCREEN_CENTER_Y)
    drawRect(SCREEN_CENTER_X, SCREEN_CENTER_Y, SCREEN_CENTER_X, SCREEN_CENTER_Y)

    ; Draw images with a white background...
    drawImage(10 + SCREEN_CENTER_X, 10, "myImage.rgf")
    drawImage(10, 10 + SCREEN_CENTER_Y, "accept1.rgf")

    ; Draw images with a black background...
    setFillColor(WHITE)
    drawImage(10, 10, "myImage.rgf")
    drawImage(10 + SCREEN_CENTER_X, 10 + SCREEN_CENTER_Y, "accept1.rgf")

    updateScreen()

    halt()
end
