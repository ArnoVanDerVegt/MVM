#project "String number example"

#include "lib/standard.whl"
#include "lib/device.whl"
#include "lib/screen.whl"
#include "lib/string.whl"

proc main()
    ; This example uses the EV3 screen in the simulator...
    selectDevice(DEVICE_EV3)

    string s
    number n = 2.79
    numberToString(n, s)
    drawText(10, 10, "Number to string:")
    drawText(10, 30, s)

    s = "4.67"
    n = stringToNumber(s)
    drawText(10, 50, "String to number:")
    drawNumber(10, 70, n)

    updateScreen()

    halt()
end
