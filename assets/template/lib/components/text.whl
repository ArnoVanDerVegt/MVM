namespace components.text

; @const The form component module.
#define MODULE_COMPONENT_TEXT           82

; @const Module calls for text component functions.
#define TEXT_COMPONENT_SET_HIDDEN        0
#define TEXT_COMPONENT_SET_X             1
#define TEXT_COMPONENT_SET_Y             2
#define TEXT_COMPONENT_SET_TEXT          3

; @proc                   Hide the text.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param hidden           Hidden `TRUE` or `FALSE`.
proc setHidden(number windowHandle, number componentHandle, number hidden)
    addr windowHandle
    mod  MODULE_COMPONENT_TEXT, TEXT_COMPONENT_SET_HIDDEN
end

; @proc                   Set the x position of the text.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param x                The x position in pixels.
proc setX(number windowHandle, number componentHandle, number x)
    addr windowHandle
    mod  MODULE_COMPONENT_TEXT, TEXT_COMPONENT_SET_X
end

; @proc                   Set the y position of the text.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param y                The y position in pixels.
proc setY(number windowHandle, number componentHandle, number y)
    addr windowHandle
    mod  MODULE_COMPONENT_TEXT, TEXT_COMPONENT_SET_Y
end

; @proc                   Set text text.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param text             The text text.
proc setText(number windowHandle, number componentHandle, string text)
    addr windowHandle
    mod  MODULE_COMPONENT_TEXT, TEXT_COMPONENT_SET_TEXT
end
