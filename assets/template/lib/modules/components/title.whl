namespace components.title

; @const The form component module.
#define MODULE_COMPONENT_TITLE           81     ; `image:images/buttons/headerBlack.svg`

; @const Module calls for title component functions.
#define TITLE_COMPONENT_SET_HIDDEN        0
#define TITLE_COMPONENT_SET_X             1
#define TITLE_COMPONENT_SET_Y             2
#define TITLE_COMPONENT_SET_TEXT          3

; @property name   string  The component name.
; @property hidden boolean Hide the component.
; @property x      number  The left position of the component inside the parent component.
; @property y      number  The top position of the component inside the parent component.
; @property zIndex number  The depth of the component related to other components in the parent.
; @property text   string  The title text.

; @proc                   Hide the title.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param hidden           Hidden `TRUE` or `FALSE`.
proc setHidden(number windowHandle, number componentHandle, number hidden)
    addr windowHandle
    mod  MODULE_COMPONENT_TITLE, TITLE_COMPONENT_SET_HIDDEN
end

; @proc                   Set the x position of the title.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param x                The x position in pixels.
proc setX(number windowHandle, number componentHandle, number x)
    addr windowHandle
    mod  MODULE_COMPONENT_TITLE, TITLE_COMPONENT_SET_X
end

; @proc                   Set the y position of the title.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param y                The y position in pixels.
proc setY(number windowHandle, number componentHandle, number y)
    addr windowHandle
    mod  MODULE_COMPONENT_TITLE, TITLE_COMPONENT_SET_Y
end

; @proc                   Set title text.
; @param windowhandle     The handle of the window.
; @param componentHandle  The handle of the component.
; @param text             The title text.
proc setText(number windowHandle, number componentHandle, string text)
    addr windowHandle
    mod  MODULE_COMPONENT_TITLE, TITLE_COMPONENT_SET_TEXT
end
