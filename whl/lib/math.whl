#define MODULE_MATH 1

#define MATH_ROUND  0
#define MATH_FLOOR  1
#define MATH_CEIL   2
#define MATH_ABS    3
#define MATH_NEG    4

proc round(number n)
    struct Round
        number result
    ends
    Round round
    set      round.result, n
    addr     round
    module   MODULE_MATH,  MATH_ROUND
    return   round.result
endp

