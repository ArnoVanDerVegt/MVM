#define MODULE_STANDARD       0

#define STANDARD_PRINT_NUMBER 0
#define STANDARD_PRINT_STRING 1
#define STANDARD_SLEEP        2

#define TRUE                  1
#define FALSE                 0

proc printN(number n)
    record PrintNumber
        number   n
    endr
    PrintNumber printNumber
    asm
        set      printNumber.n,          n
        addr     printNumber
        module   MODULE_STANDARD,        STANDARD_PRINT_NUMBER
    end
endp

proc printS(string s)
    record PrintString
        string   s
    endr
    PrintString printString
    asm
        set      printString.s,          s
        addr     printString
        module   MODULE_STANDARD,        STANDARD_PRINT_STRING
    end
endp

proc sleep(number milliseconds)
    record Sleep
        number milliseconds
    endr
    Sleep sleep
    asm
        set      sleep.milliseconds,     milliseconds
        addr     sleep
        module   MODULE_STANDARD,        STANDARD_SLEEP
    end
endp